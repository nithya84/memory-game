# Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# DynamoDB Configuration
# =============================================================================
DYNAMODB_TABLE_PREFIX=memory-game-
THEMES_TABLE=memory-game-api-themes-dev

# =============================================================================
# Amazon Bedrock Configuration
# =============================================================================
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=amazon.titan-image-generator-v1

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# =============================================================================
# API Configuration
# =============================================================================
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Admin Token (generate with: openssl rand -base64 32)
# =============================================================================
ADMIN_TOKEN=your-secure-admin-token

# =============================================================================
# Image Storage
# =============================================================================
S3_BUCKET_NAME=memory-game-images-dev
CLOUDFRONT_DOMAIN=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=10

# =============================================================================
# Local Development (set USE_MOCK_AI=true to avoid AWS costs)
# =============================================================================
USE_MOCK_AI=false